pipeline {
    agent any
	    
    tools {
        maven "3.10.0-957.1.3.el7.x86_64"
        jdk '1.8.0_201'
    }
  stages {
    stage('Preparation') {
      steps{
        deleteDir()
        sh 'git clone https://github.com/Ya2e/test-jenkins.git .'
      }
    }
    stage('Release') {
      steps{
        sh 'mvn --version'
        sh 'mvn -Dresume=false -DdryRun=true release:prepare -DreleaseVersion=${releaseVersion} -DdevelopmentVersion=${developmentVersion} -Dusername=Ya2e -Dpassword=usmh0crb2'
        sh 'mvn -Dresume=false release:prepare release:perform -DreleaseVersion=${releaseVersion} -DdevelopmentVersion=${developmentVersion} -Dusername=Ya2e -Dpassword=usmh0crb2'
      }
    }
    stage('Publication of site') {
      steps{
        sh 'mvn --version'
        sh 'git checkout ${releaseVersion}'
        sh 'mvn clean install site site:stage scm-publish:publish-scm'
      }
    }
  }
}
    