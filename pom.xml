<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ghanem</groupId>
  <artifactId>projet-maven</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>
  
<properties>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
</properties>

<scm>
	<connection>scm:git:git@github.com:Ya2e/test-jenkins.git</connection>
	<developerConnection>scm:git:git@github.com:Ya2e/test-jenkins.git</developerConnection>
	<url>https://github.com/Ya2e/test-jenkins.git</url>
	<!--  <tag>@{project.version}</tag>-->
</scm>
  
<dependencies>
    <dependency>
        <groupId>dom4j</groupId>
        <artifactId>dom4j</artifactId>
        <version>1.6.1</version>
    </dependency>
</dependencies>



	<distributionManagement>
		<!-- <repository>
        	<id>localNexus</id>
        	<!-- <name>releases</name>
        	<url>http://localhost:8081/nexus/content/repositories/releases</url>
   		 </repository> -->
  	    <snapshotRepository>
            <id>nexus-snapshot</id>
            <name>Snapshots</name>
            <url>http://localhost:8081/nexus/content/repositories/snapshots/</url>
        </snapshotRepository>
	</distributionManagement>
	
	<!--  build -->
	<build>
        <plugins>
            <plugin>
            	<groupId>org.ghanem</groupId>   
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5.3</version>
                <configuration>
                  <!--   <tag>${project.artifactId}-${project.version}</tag>-->
                   <allowSnapshots>true</allowSnapshots> 
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>